{
  "name": "freelance-tracker",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "packages/types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && npm run build:client && npm run build:server",
    "build:client": "npm run build --workspace=client",
