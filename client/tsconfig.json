{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ],
        "noEmit": true,
        "allowJs": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "../packages/types/types.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}