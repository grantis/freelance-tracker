{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "types": ["vite/client"],
      "noEmit": true,
      "allowJs": true,
      "moduleResolution": "Bundler",
      "module": "ESNext",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ],
    "exclude": ["node_modules", "dist"]
  }