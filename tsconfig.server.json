{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@types/cors"],
    "paths": {
      "@db": ["./server/db/index.js"],
      "@db/*": ["./server/db/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
} 