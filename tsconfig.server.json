{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "paths": {
      "@db": ["./server/db/index.ts"],
      "@db/*": ["./server/db/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
} 