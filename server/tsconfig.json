{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "../dist/server",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "baseUrl": ".",
      "paths": {
        "@db": ["./db/index.ts"],
        "@db/*": ["./db/*"]
      },
      "types": ["node", "vite/client"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }